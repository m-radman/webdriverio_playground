{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run wdio (all tests)",
      "program": "${workspaceFolder}/node_modules/.bin/wdio",
      "args": ["run", "./wdio.conf.ts"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run wdio (current test file)",
      "program": "${workspaceFolder}/node_modules/.bin/wdio",
      "args": ["run", "./wdio.conf.ts", "--spec", "./test/specs/${fileBasename}"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run wdio (one test)",
      "program": "${workspaceFolder}/node_modules/.bin/wdio",
      "args": ["run", "./wdio.conf.ts", "--spec", "./test/specs/checkbox.e2e.ts"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}